<Application x:Class="LizardUX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Globals.xaml" />
                <ResourceDictionary Source="Themes/Buttons.xaml" />
                <ResourceDictionary Source="Themes/Menus.xaml" />
                <ResourceDictionary Source="Themes/ScrollViewer.xaml" />
                <ResourceDictionary Source="Themes/ListBox.xaml" />
                <ResourceDictionary Source="Themes/TextBox.xaml" />
                <ResourceDictionary Source="Themes/ListView.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
