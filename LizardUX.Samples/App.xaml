                <ResourceDictionary Source="pack://application:,,,/LizardUX;component/Themes/Menus.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LizardUX;component/Themes/ScrollViewer.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LizardUX;component/Themes/ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LizardUX;component/Themes/TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
